<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="android:colorForeground">@color/dark_blue</item>
    </style>

    <style name="mainPageText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="navHeaderPage">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/balsamiqsans_regular</item>
    </style>

    <style name="locationInfoText" parent="mainPageText">
        <item name="android:textSize">22sp</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="weatherParams" parent="mainPageText">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="simpleText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dayItemStrongText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cardViewText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>